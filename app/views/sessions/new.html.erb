<div class="container-fluid">

  <%= form_tag '/login', :method => :post do %>
    <div class="row">
      <div class="col-1">
        <%= label_tag :username, "Username", :class => "h3" %>
      </div>
      <div class="col-1">
        <%= text_field_tag :username %>
      </div>
    </div>
    <div class="row">
      <div class="col-1">
        <%= label_tag :password, "Password", :class => "h3" %>
      </div>
      <div class="col-1">
        <%= password_field_tag :password %>
      </div>
    </div>
    <div class="row mt-1" style="padding-left: 195px">
      <%= submit_tag 'Login', :class => "nav-link info-link auth-link" %>
    </div>
  <% end %>

</div>
