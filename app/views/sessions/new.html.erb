<h2>Login</h2>

<%= form_tag '/login', :method => :post do %>
<%= label_tag :username %>
<%= text_field_tag :username %>
<%= label_tag :password %>
<%= password_field_tag :password %>
<%= submit_tag 'Login' %>
<% end %>