<h2>All Users</h2>

<table class="table table-striped col-md-12" id="users">
  <thead>
    <tr>
      <th>Users</th>
      <th>Collectibles</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to "#{user.username}", user_path(user) %>
        </td>
        <td>
          <%= @countItemsHash[user.id] %>
        </td>
        <td>
          <%= @sumValueHash[user.id] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
