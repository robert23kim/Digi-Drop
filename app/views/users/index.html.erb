<% if current_user %>
  Logged in as <%= current_user.username %>.
  <%= link_to 'Log Out', logout_path %>
<% else %>
  <%= link_to 'Sign Up', 'users/new' %> or 
  <%= link_to 'Log In', login_path %>
<% end %>

<h2>All Users</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="users">
  <thead>
    <tr>
      <th>Users</th>
      <th>Collectibles</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to "#{user.username}", user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
