<div class="container">
    <div class="row mt-3">
        <%= button_to 'Open Case', add_asset_user_path(@user), :class => "btn btn-success" %>
    </div>
    
    <div class="row mt-3">
        <% if !@added_collectible.nil? and @added_collectible.size > 0 %>
            <div class="card" style="width: 36rem;">
                <img class="card-img-top" src=<%= @added_collectible.first.url%>>
                <div class="card-body">
                <p class="card-text">
                    <%= @added_collectible.first.name %>
                </p>
                </div>
            </div>
        <% end %>
    </div>
</div>
